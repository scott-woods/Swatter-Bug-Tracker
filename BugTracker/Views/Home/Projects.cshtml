@{ 
    ViewBag.Title = "Swatter - Projects";
}
@model BugTracker.Models.Home.ProjectIndexModel
<div class="container-fluid">
    <div class="card mt-4 mb-4">
        <div class="card-header">
            <h2>My Projects</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="height:400px">
                <table class="table" id="dataTable" width="100%" cellspacing="0" style="table-layout:fixed">
                    <thead>
                        <tr>
                            <td>Project Name</td>
                            <td>Description</td>
                            <td>Last Updated</td>
                            <td>Last Updated By</td>
                            <td style="width:40%;text-align:right"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model.Projects)
                        {
                            <tr>
                                <td>@project.Title</td>
                                <td>@project.Description</td>
                                <td>@project.LastUpdateDate</td>
                                <td>@project.LastUpdatedByUsername</td>
                                <td style="text-align:right">
                                    <ul style="display:inline-block">
                                        <li>
                                            <span style="position:relative;right:20px">
                                                <a class="nav-link"
                                                   asp-controller="Home"
                                                   asp-action="ProjectDetails"
                                                   asp-route-projectId="@project.Id">Manage Project</a>
                                            </span>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <form asp-controller="Home" asp-action="NewProject" method="get">
        <button class="btn btn-primary mb-4">Create New Project</button>
    </form>
</div>