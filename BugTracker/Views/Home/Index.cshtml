@{ 
    ViewBag.Title = "Swatter - Dashboard";
}
@model BugTracker.Models.CommonViewModels.TicketProjectModel
<div class="container-fluid">
    <div class="row border">
        <div class="col col-6 d-flex justify-content-around border">
            <div class="card">
                <div class="card-header">
                    <h4>Tickets by Priority</h4>
                </div>
                <div class="card-body">
                    <canvas id="ticketBarChart"></canvas>
                    <script>
                        var ticketIndexModel = @Html.Raw(Json.Serialize(Model.TicketIndexModel));
                        var ctx = document.getElementById('ticketBarChart');
                        var ticketBarChart = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: ['Low', 'Medium', 'High'],
                                datasets: [{
                                    label: '# of Tickets',
                                    data: [ticketIndexModel.PriorityCount[Priority.Low],
                                        ticketIndexModel.PriorityCount[Priority.Medium],
                                        ticketIndexModel.PriorityCount[Priority.High]],
                                    backgroundColor: "rgba(2,117,216,1)",
                                    borderColor: "rgba(2,117,216,1)",
                                }]
                            },
                            options: {
                                scales: {
                                    yAxes: [{
                                        ticks: {
                                            beginAtZero: true
                                        }
                                    }]
                                }
                            }
                        })
                    </script> 
                </div>
            </div>
        </div>
        <div class="col col-6 d-flex border">

        </div>
    </div>
    <div class="row justify-content-around border">
        <div class="col col-6 d-flex border">

        </div>
        <div class="col col-6 d-flex border">

        </div>
    </div>
</div>