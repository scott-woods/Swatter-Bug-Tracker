@{
    ViewBag.Title = "Swatter - Projects";
}
@model BugTracker.Models.Projects.ProjectIndexModel
<div class="container-fluid">
    <div class="card mt-4 mb-4">
        <div class="card-header">
            <h2>My Projects</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive" style="height:400px">
                <table class="table table-sm" id="dataTable" width="100%" cellspacing="0" style="table-layout:fixed">
                    <thead>
                        <tr>
                            <td>Project Name</td>
                            <td>Description</td>
                            <td>Creator</td>
                            <td>Last Updated</td>
                            <td>Last Updated By</td>
                            <td style="width:30%;text-align:right"></td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var project in Model.Projects)
                        {
                            <tr>
                                <td>@project.Title</td>
                                <td>@project.Description</td>
                                <td>@project.Creator.UserName</td>
                                <td>@project.LastUpdateDate</td>
                                <td>@project.LastUpdatedByUsername</td>
                                <td style="text-align:right">
                                    <ul style="display:inline-block">
                                        <li>
                                            <span>
                                                <a class="nav-link"
                                                   asp-action="ProjectDetails"
                                                   asp-route-projectId="@project.Id">Manage Project</a>
                                            </span>
                                        </li>
                                        <li>
                                            <span>
                                                <a class="nav-link"
                                                   asp-action="EditProject"
                                                   asp-route-projectId="@project.Id">Edit Project</a>
                                            </span>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <a class="btn btn-primary mb-4" asp-action="NewProject">Create New Project</a>
</div>