@model BugTracker.Models.Ticket
<div id="PlaceHolderHere"></div>
    <div class="modal fade" id="modal-delete">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalDeleteLabel">Delete Ticket</h5>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="@Url.Action("DeleteTicket", "Tickets")">
                        Are you sure you want to delete this Ticket?
                        <input type="hidden" asp-for="@Model.Id" />
                        <input type="hidden" asp-for="@Model.Project.Id" />
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" id="deleteButton" class="btn btn-danger" data-save="modal">Delete</button>
                </div>
            </div>
        </div>
    </div>