 <form asp-controller="@ViewBag.ModalController" asp-action="@ViewBag.ModalAction" role="form" id="deleteForm">
    <div class="modal fade" id="modal-delete" tabindex="-1" role="dialog" aria-labelledby="modalDeleteLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalDeleteLabel">Delete @ViewBag.ModalType</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this @ViewBag.ModalType?
                    <input hidden name="id" />
                    <input hidden name="redirectController" />
                    <input hidden name="redirectAction" />
                    <input hidden name="redirectId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger" id="modalDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>
</form>